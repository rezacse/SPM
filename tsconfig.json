{
  "compilerOptions": {
    "target": "es5",                //to transfer our code to TypeScript es5 
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,              //to generate the .map file at debug time
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ]
}